<p id="notice"><%= notice %></p>

<h1><%= @pokemon[:identifier].capitalize %></h1>

<div class="col-md-6">
  <table class="table table-striped table-bordered">
    <tr>
      <th>Type 1</th>
      <th>Type 2</th>
    </tr>

    <tbody>
      <tr>
        <td><%= @pokemon.types[0][:identifier].capitalize %></td>
        <td>
          <% if !@pokemon.types[1].nil? %>
            <%= link_to @pokemon.types[1][:identifier].capitalize, @pokemon.types[1] %>
          <% end %>
        </td>
      </tr>
    </tbody>

  <table>
</div>

<div class="col-md-6">
  <h3>Moveset</h3>
  <table class="table table-striped table-bordered">
    <tr>
      <th>Gen</th>
      <th>Name</th>
      <th>Type</th>
    </tr>
    <tbody>
      <% @moves.each do |move| %>
        <tr>
          <td><%= move.generation_id %></td>
          <td><%= link_to move.identifier.capitalize, move %></td>
          <td><%= link_to move.types[0][:identifier].capitalize, move.types[0] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
