<p id="notice"><%= notice %></p>

<h1><%= @type.identifier.capitalize %></h1>

<div class="col-md-6">
  <h3>Pokemon with this type</h3>
  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
      <th colspan="2">Type</th>
    </tr>

    <tbody>
      <% @pokemons.each do |pokemon| %>
        <tr>
          <td><%= link_to pokemon.identifier.capitalize, pokemon %></td>
          <td><%= link_to pokemon.types[0][:identifier].capitalize, pokemon.types[0] %></td>
          <td>
            <% if !pokemon.types[1].nil? %>
              <%= link_to pokemon.types[1][:identifier].capitalize, pokemon.types[1] %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-md-4">
  <h3>Moves with this type</h3>
  <table class="table table-striped table-bordered">
    <tr>
      <th>Name</th>
    </tr>
    <tbody>
      <% @moves.each do |move| %>
        <tr>
          <td><%= link_to move.identifier.capitalize, move %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
