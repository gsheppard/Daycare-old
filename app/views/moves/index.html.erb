<h1>Listing moves</h1>

<div class="col-md-6">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
      </tr>
    </thead>

    <tbody>
      <% @moves.each do |move| %>
        <tr>
          <td><%= link_to move[:identifier].capitalize, move %></td>
          <td><%= link_to move.types[0][:identifier].capitalize, move.types[0] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
